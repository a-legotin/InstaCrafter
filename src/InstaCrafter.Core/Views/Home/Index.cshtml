@{
    ViewBag.Title = "Crafters logs";
}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Crafters logs</div>
        <div class="panel-body">
            <ul id="logs" class="list-group">
                <li class="list-group-item">Cras justo odio</li>

            </ul>
        </div>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function() {
            var hub = $.connection.crafterLogsHub;
            $.connection.hub.start().done(function() {
                console.debug('Connected to PlanHub...');
            });
            hub.client.notify = function (message) {
                console.debug(message);
                $("#logs").append('<li class="list-group-item">' + message + '</li>');
            }
        });
    </script>
}