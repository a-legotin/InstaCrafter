@{
    ViewBag.Title = "Crafters logs";
}
<div class="container">

    <div class="card">
        <div class="card-header">
            Crafters logs
        </div>
        <ul id="logs" class="list-group list-group-flush"></ul>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function() {
            var hub = $.connection.craftLogsHub;
            $.connection.hub.start({ transport: 'serverSentEvents' }).done(function() {
                console.debug('Connected to CraftLogsHub...');
            });
            hub.client.notify = function(message) {
                console.debug(message);
                $("#logs").append('<li class="list-group-item">' + message + '</li>');
            };
        });
    </script>
}