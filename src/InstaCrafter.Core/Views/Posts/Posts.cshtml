@model InstaCrafter.Core.Models.Posts

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Code</th>
        <th>Details</th>
        <th>Created at</th>
    </tr>

    @foreach (var item in Model.List)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Code</td>
            <td>
                <a href="@Url.Content(item.Link)">Click</a>
            </td>
            <td>@item.CreatedTime</td>
        </tr>
    }
</table>